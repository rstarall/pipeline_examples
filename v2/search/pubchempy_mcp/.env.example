# PubChemPy MCP Server Environment Configuration

# General settings
LOG_LEVEL=info
PYTHONPATH=/app

# Mirror settings (for Chinese users)
# Set to true to use Chinese mirrors for faster build times
USE_CN_MIRRORS=true

# Search settings
MAX_RESULTS=5
MAX_SYNONYMS=10

# Fallback settings
AUTO_FALLBACK=true

# Logging
LOG_FILE=logs/server.log 